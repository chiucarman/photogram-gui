<h1><%= @new_user.username %></h1>

<dl>
  <dt>
    ID
  </dt>
  <dd>
    <%= @new_user.id %>
  </dd>

  <dt>
    Edit user
  </dt>
  <dd>
    <form action="/update_username/<%= @new_user.id %>" method="post">
      <label for="username_field">Username</label>
      <input id="username_field" type="text" name="updated_username" value="<%= @new_user.username %>">

      <button>
        Update user
      </button>
    </form>
  </dd>
</dl>

<h2>Own photos (<%= @new_user.own_photos.count %>)</h2>
